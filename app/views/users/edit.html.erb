<h1 align= "center">Edit User</h1>
<center>
  <%= form_tag '/profile/edit', method: :post%>

    <%= label_tag :name %>
    <%= text_field_tag :name, placeholder: @user.name %>

    <%= label_tag :address %>
    <%= text_field_tag :address, placeholder: @user.address %>

    <%= label_tag :city%>
    <%= text_field_tag :city, placeholder: @user.city%>

    <%= label_tag :state%>
    <%= text_field_tag :state, placeholder: @user.state%>

    <%= label_tag :zip%>
    <%= text_field_tag :zip, placeholder: @user.zip%>

    <%= label_tag :email%>
    <%= text_field_tag :email, placeholder: @user.email%>

    <%= submit_tag 'Edit User' %>
</center>
