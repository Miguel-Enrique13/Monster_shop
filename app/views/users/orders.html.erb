<h1>All Orders</h1>

<section class="grid-container">
  <% current_user.orders.each do |order| %>
    <section class = "grid-item" id= 'order-<%=order.id%>'>
      <h2> Order Reference Number: <%= link_to "##{order.id}", "/profile/order/#{order.id}" %> </h2>
      <p>Date Ordered: <%= order.created_at %></p>
      <p>Most Recent Update: <%= order.updated_at %></p>
      <p>City: <%= order.city %></p>
      <p>State: <%= order.state %></p>
      <p>Zip: <%= order.zip %></p>
      <p>Status: <%= order.status %></p>
      <p>Item Quantity: <%= order.quantity %></p>
      <p>Total: <%= order.grandtotal %></p>
    </section>
  <% end %>
</section>
