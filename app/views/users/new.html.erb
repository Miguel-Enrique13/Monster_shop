<h1 align= "center">Register User</h1>
<center>
  <%= form_tag '/register', method: :post%>

    <%= label_tag :name %>
    <%= text_field_tag :name %>

    <%= label_tag :address %>
    <%= text_field_tag :address %>

    <%= label_tag :city%>
    <%= text_field_tag :city%>

    <%= label_tag :state%>
    <%= text_field_tag :state%>

    <%= label_tag :zip%>
    <%= text_field_tag :zip%>

    <%= label_tag :email%>
    <%= text_field_tag :email%>

    <%= label_tag :password %>
    <%= password_field_tag :password%>

    <%= label_tag :password_confirmation, 'Password Confirmation' %>
    <%= password_field_tag :password_confirmation, 'Password Confirmation'%>

    <%= submit_tag 'Register User' %>
</center>
